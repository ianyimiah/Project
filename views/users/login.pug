extends ../layouts/layout

block content
	form.form-horizontal(style='margin-top:4rem', action='/users/login', method="post")
		fieldset
			legend.h3 Login Form
			.form-group
				if (messages.length > 0)
					.alert.alert-danger.col-md-4.col-md-offset-4
						each message in messages
							p= message
			.form-group
				label.col-md-4.control-label(for='email') User Identification
				.col-md-4
					input#email.form-control.input-md(name='email', type='text', placeholder='Email', required='true')
					|  
					span.help-block Enter Email
			.form-group
				label.col-md-4.control-label(for='password') Passcode
				.col-md-4
					input#password.form-control.input-md(name='password', type='password', placeholder='Enter Passcode', required='true')
					|  
					span.help-block Enter Passcode
			.form-group
				label.col-md-4.control-label(for='user_type') User
				.col-md-4
					label.radio-inline(for='admin')
						input#admin(type='radio', name='user_type', value='admin', checked='checked')
						|  Administrator
					|  
					label.radio-inline(for='radios-1')
						input#super(type='radio', name='user_type', value='super')
						|  Supervisor
			.form-group
					label.col-md-4.control-label(for='submit')
					.col-md-4
						input.col-md-4(type='hidden', name='_csrf', value=csrfToken)
						button#submit.btn.btn-primary(name='submit', type='submit') Submit		