extends ../layouts/layout

block content
    form.col-md-4.col-md-offset-4.form-horizontal(style='margin-top:4rem', method='post', action='/users/signup-landing')
        .form-group
            label(for='user_type') Continue as as
                .radio#admin
                    label
                        input(type='radio', name='user_type', value='admin')
                        | Administrator
                .radio#super
                    label
                        input(type='radio', name='user_type', value='super')
                        | Supervisor
        .form-group
            label(for='name') Full name
            input#name.form-control(name='name', type='text', placeholder='fullname')
        .form-group
            label(for='id') ID number
            input#id.form-control(name='id', type='text', placeholder='ID number')
        .form-group
            label(for='titles') Title(s)
            input#titles.form-control(name='titles', type='text', placeholder='Titles')
            p.help-block Enter one or more titles seperated by commas
        .form-group
            label(for='profile_image') Profile Image Link
            input#profile_image.form-control(name='prfile_image', type='text', placeholder='fullname')
        input.col-md-4(type='hidden', name='_csrf', value=csrfToken)
        button.btn.btn-primary(type='submit') Submit